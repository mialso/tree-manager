{
    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "module": "preserve",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": false,
        "noEmit": true,
        "preserveConstEnums": true,
        "target": "es2020"
    },
    "include": [
        "src/*"
    ]
}
